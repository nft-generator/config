<!-- Allowed type are:
   - hex
   - rgb
   - name (CSS or HTML name) -->

<!-- First example with rgb type -->

<background>
    <type>hex</type>
    <color red="128" green="128" blue="0"/>
</background>


<!-- Second example with hex type -->

<background>
    <type>rgb</type>
    <color code="808000"/>
</background>

<!-- Third example with name type -->

<background>
    <type>name</type>
    <color name="olive"/>
</background>


